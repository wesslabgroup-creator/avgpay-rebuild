generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id                  String    @id @default(cuid())
  name                String    @unique
  slug                String    @unique
  domain              String?
  industry            String?
  analysis            Json?
  analysisGeneratedAt DateTime?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  salaries  Salary[]
  postings  JobPosting[]
}

model Role {
  id                  String    @id @default(cuid())
  title               String
  canonicalTitle      String
  slug                String    @unique
  category            String?
  analysis            Json?
  analysisGeneratedAt DateTime?

  salaries    Salary[]
  postings    JobPosting[]
}

model Location {
  id                  String    @id @default(cuid())
  city                String
  state               String
  country             String    @default("US")
  metro               String
  slug                String    @unique
  analysis            Json?
  analysisGeneratedAt DateTime?

  salaries Salary[]
  postings JobPosting[]
}

model EnrichmentQueue {
  id          String    @id @default(cuid())
  entityType  String    // Company, City, Job
  entityId    String
  entityName  String
  contextData Json?
  status      String    @default("pending") // pending, processing, completed, failed
  attempts    Int       @default(0)
  lastError   String?
  result      Json?
  createdAt   DateTime  @default(now())
  processedAt DateTime?

  @@index([status])
  @@index([entityType, entityId])
}

model Salary {
  id          String   @id @default(cuid())
  baseSalary  Int
  equity      Int?
  bonus       Int?
  totalComp   Int
  level       String?
  yearsExp    Int?
  
  companyId   String
  company     Company  @relation(fields: [companyId], references: [id])
  
  roleId      String
  role        Role     @relation(fields: [roleId], references: [id])
  
  locationId  String
  location    Location @relation(fields: [locationId], references: [id])
  
  source      String   // bls, h1b, user, scraper
  verified    Boolean  @default(false)
  submittedAt DateTime @default(now())
  
  @@index([companyId, roleId, locationId])
  @@index([totalComp])
}

model JobPosting {
  id          String   @id @default(cuid())
  title       String
  minSalary   Int?
  maxSalary   Int?
  currency    String   @default("USD")
  url         String?
  postedAt    DateTime?
  
  companyId   String
  company     Company  @relation(fields: [companyId], references: [id])
  
  roleId      String
  role        Role     @relation(fields: [roleId], references: [id])
  
  locationId  String
  location    Location @relation(fields: [locationId], references: [id])
  
  source      String   // greenhouse, lever, ashby, direct
  scrapedAt   DateTime @default(now())
  isActive    Boolean  @default(true)
}

model UserSubmission {
  id          String   @id @default(cuid())
  email       String?
  baseSalary  Int
  equity      Int?
  bonus       Int?
  totalComp   Int
  
  company     String
  role        String
  location    String
  level       String?
  yearsExp    Int?
  
  status      String   @default("pending") // pending, approved, rejected
  weight      Float    @default(0.5)
  
  submittedAt DateTime @default(now())
  reviewedAt  DateTime?
}

model AnalysisSubmission {
  id           String   @id @default(cuid())
  company      String?
  role         String
  location     String
  level        String?
  baseSalary   Int?
  equity       Int?
  bonus        Int?
  totalComp    Int
  marketMedian Int
  grade        String
  percentile   Int?
  mode         String   // offer or salary
  userAgent    String?
  status       String   @default("pending")
  createdAt    DateTime @default(now())

  @@index([company, role])
}

model EmailSubscription {
  id          String   @id @default(cuid())
  email       String   @unique
  type        String   // salary-alerts, negotiation-tips
  active      Boolean  @default(true)
  subscribedAt DateTime @default(now())
}

model Comparison {
  id             String   @id @default(cuid())
  entityAType    String
  entityAId      String
  entityAName    String
  entityASlug    String
  entityBType    String
  entityBId      String
  entityBName    String
  entityBSlug    String
  statsSnapshot  Json?
  insights       Json?
  status         String   @default("completed") // pending, processing, completed, failed
  generatedAt    DateTime?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@unique([entityAType, entityAId, entityBType, entityBId])
  @@index([status, updatedAt])
}
